<h1 class="d-flex">
    <img class="mr-10" src="https://img.icons8.com/color/70/000000/activity-history.png">
    <div>Stories</div>
</h1>

<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{#if user }}
                        {{{ editIcon user.id  ../user.id id}}}
                    {{/if}}
                </div>
                <div class="card-content center-align">
                    <h5>{{ title }}</h5>
                    <p class="story-text">{{ stripTags (truncate body 250) }}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="Contact Person">
                        {{ user.firstName }} {{ user.lastName }}
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/show/{{id}}" class="btn green">
                        <i class="fa fa-question-circle"></i> Read More
                    </a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories found</p>
    {{/each}}
</div>