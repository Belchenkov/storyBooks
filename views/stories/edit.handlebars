<h1>Edit Story</h1>

<div class="row">
    <form action="/stories" method="post" class="col s8">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{ story.title }}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select story.status }}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <input
                        type="checkbox"
                        name="allowComments"
                        class="filled-in"
                        id="filled-in-box"
                        {{#if story.allowComments }}
                          checked="checked"
                        {{/if}}
                >
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea name="body" id="body">{{ story.body }}</textarea>
            </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit">
            <i class="fa fa-floppy-o"></i>
            Save
        </button>

    </form>
</div>